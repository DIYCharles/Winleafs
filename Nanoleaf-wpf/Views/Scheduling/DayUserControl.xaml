<UserControl x:Class="Nanoleaf_wpf.Views.Scheduling.DayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoleaf_wpf.Views.Scheduling"
             mc:Ignorable="d" 
             Width="200" Height="Auto">
    <Grid>
        <Label Content="{Binding NameOfDay}" Foreground="White" FontSize="20"/>
        <Expander Header="Event based" HorizontalAlignment="Stretch" MinHeight="100" VerticalAlignment="Top" Foreground="White" Margin="5,30,0,0">
            <Grid/>
        </Expander>
        <Expander Header="Time based" HorizontalAlignment="Stretch" MinHeight="100" VerticalAlignment="Top" Foreground="White" Margin="5,130,0,0">
            <Grid/>
        </Expander>
    </Grid>
</UserControl>
