<UserControl x:Class="Nanoleaf_wpf.Views.Scheduling.TriggerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoleaf_wpf.Views.Scheduling"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="200">
    <Grid>
        <Label Content="{Binding TriggerName}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="26" Width="50"/>
        <Label Content="{Binding Description}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="26" Width="115" Margin="55,0,0,0"/>
        <Button HorizontalAlignment="Left" Margin="172,0,0,0" VerticalAlignment="Top" Width="26" Background="{x:Null}" BorderBrush="{x:Null}" Height="26">
            <Path Data="M0,0.5 L1,0.5"
          StrokeThickness="4"
          Stretch="Fill"
          Stroke="White" />
        </Button>
    </Grid>
</UserControl>
