<UserControl x:Class="Nanoleaf_wpf.Views.Setup.AuthorizeDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoleaf_wpf.Views.Setup"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="400">

    <Grid Background="{StaticResource NanoleafBlack}">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Step 2: Hold to on-off button of your Nanoleaf device for 5-7 seconds until the LED starts flasing in a pattern" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="Step 3: Click the button below within 30 seconds" VerticalAlignment="Top" Foreground="White"/>
        <Button Content="Pair" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top" Width="100" Background="{StaticResource NanoleafGreen}" Foreground="White" FontSize="25" BorderBrush="{x:Null}" Click="Pair_Click"/>

    </Grid>
</UserControl>
