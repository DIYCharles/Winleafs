<UserControl x:Class="Nanoleaf_wpf.Views.MainWindows.ScheduleItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoleaf_wpf.Views.MainWindows"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>        
        <Label Content="{Binding Schedule.Name}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="20" Height="40" Width="226" MouseDoubleClick="ActiveSchedule_Click"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" Click="Edit_Click" Margin="226,2,0,0">
            <Image Source="../../Icons/appbar.edit.png"></Image>
        </Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" Click="Delete_Click" Margin="261,2,0,0">
            <Image Source="../../Icons/appbar.delete.png"></Image>
        </Button>
    </Grid>
</UserControl>
